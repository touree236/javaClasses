 String string="Kayak";
 boolean flag=true;
 string=string.toLowerCase();
 for(int i=0; i<string.length()/2;i++);
 int i=0;
 if(string.charAt(i)!=string.charAt(string.length()-i-1)) {
     
     flag=false;
     
