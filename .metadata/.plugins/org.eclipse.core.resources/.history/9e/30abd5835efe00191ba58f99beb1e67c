package com.class14;

public class SplitMethodStringNov3 {
	
	public static void main(String[] args) {
		
		// this method splits this string around matches of the giving regular expression 
		
		
		// split the following string into array of strings/work
		
		String str="Vedio provides a powerful way to help you prove your point";
		
		String [] array=str.split(" ");
		
		for (int i=0; i<array.length; i++) {
			System.out.println(array[i]);
		}System.out.println("********************");
		
		
		// how can we find how many sentences are in the following strings;
			
		String str1="Today is Sunday. Its sunny day. and we are having Java class";
		
		String[] array2=str1.split("."); // to make it regular expression ("\\.");
		for (String string: array2){
			System.out.println(string.trim());  // we can only trim string 
		}
		
		}
		
	}


