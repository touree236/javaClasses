package com.syntax.class10;

public class ArrayDemo {
	public static void main(String[] args) {
		
		int[] nums=new int[4];
		nums[0]=12;
		nums[1]=13;
		nums[2]=14;
		nums[3]=15;
		// to find number of elements inside an array we use .length( property of an array) 
		System.out.println(nums.length);
		System.out.println(nums[0]);
		
		String[]array= {"winter","fall","Summer","Spring"};
		// I was born in summer 
		System.out.println("I was born in"+array[2]);
		System.out.println(array.length);
		// or you can use 
		int arraySize=array.length;
		System.out.println(arraySize);
		
		
		// int[] score= {80.90.70.90,100}// you can do it this way to do less writing
	}
	

}
